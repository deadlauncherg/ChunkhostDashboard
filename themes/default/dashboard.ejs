<!DOCTYPE html>
<html lang="en">
  <%- include('./components/head') %>
  <body>
    <!-- Particle background -->
    <canvas id="particles"></canvas>
    <style>
      body {
        margin: 0;
        padding: 0;
        background: url("https://i.ytimg.com/vi/qK7rjAQT2Qg/maxresdefault.jpg?sqp=-oaymwEmCIAKENAF8quKqQMa8AEB-AHUBoAC4AOKAgwIABABGEQgRyhlMA8=&rs=AOn4CLB6pJYB2UQjYdo40hrA681N1XX06A") no-repeat center center fixed;
        background-size: cover;
      }
      #particles {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
      }
      .card, .navbar, .sidebar, .content-wrapper {
        background: rgba(17, 19, 25, 0.75) !important; /* transparent dark */
      }
      footer {
        text-align: center;
        color: white;
        padding: 10px;
      }
    </style>

    <div class="container-scroller">
      <!-- Default Sidebar -->
      <%- include('./components/sidebar') %>

      <div class="container-fluid page-body-wrapper">
        <!-- Default Navbar -->
        <%- include('./components/topnav') %>

        <div class="main-panel">
          <div class="content-wrapper">

            <h2 style="color:white;">Dashboard</h2>
            <p class="text-gray">View your resources & other things here.</p>

            <%- include('./components/alert') %>
            <%- include('./components/status') %>

            <div class="row">
              <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <%- include('./boxes/1') %>
                  </div>
                </div>
              </div>
              <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <%- include('./boxes/2') %>
                  </div>
                </div>
              </div>
            </div>

          </div>
          <!-- Custom Footer -->
          <footer>
            Â© ChunkHost | Powered by Lapiogamer
          </footer>
        </div>
      </div>
    </div>

    <script>
      // White moving particles
      const canvas = document.getElementById("particles");
      const ctx = canvas.getContext("2d");
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;

      const particlesArray = [];
      const numParticles = 100;

      class Particle {
        constructor() {
          this.x = Math.random() * canvas.width;
          this.y = Math.random() * canvas.height;
          this.size = Math.random() * 3 + 1;
          this.speedX = Math.random() * 1 - 0.5;
          this.speedY = Math.random() * 1 - 0.5;
        }
        update() {
          this.x += this.speedX;
          this.y += this.speedY;
          if (this.x > canvas.width || this.x < 0) this.speedX *= -1;
          if (this.y > canvas.height || this.y < 0) this.speedY *= -1;
        }
        draw() {
          ctx.fillStyle = "white";
          ctx.beginPath();
          ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
          ctx.fill();
        }
      }

      function init() {
        for (let i = 0; i < numParticles; i++) {
          particlesArray.push(new Particle());
        }
      }

      function animate() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        particlesArray.forEach(p => {
          p.update();
          p.draw();
        });
        requestAnimationFrame(animate);
      }

      init();
      animate();

      window.addEventListener("resize", () => {
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
      });
    </script>

    <%- include('./components/scripts') %>
  </body>
</html>
